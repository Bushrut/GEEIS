<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.rostovenergo.geeis.CalculationActivity">

    <TextView
        android:id="@+id/constant_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="21dp"
        android:text="@string/constant_item"
        android:textSize="@dimen/size_24"
        />

    <EditText
        android:id="@+id/text_field_constant_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/constant_item"
        android:ems="3"

        />
    <TextView
        android:id="@+id/amount_impulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="21dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_field_constant_item"
        android:text="@string/amount_impulse"
        android:textSize="@dimen/size_24"
        />
    <EditText
        android:id="@+id/text_field_amout_impulse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/amount_impulse"
        android:ems="3"
        />

    <TextView
        android:id="@+id/amount_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="21dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_field_amout_impulse"
        android:text="@string/amount_time"
        android:textSize="@dimen/size_24"
        />
    <EditText
        android:id="@+id/text_field_amout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/amount_time"
        android:ems="3"
        />
    <Button
        android:id="@+id/calculation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="21dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_field_amout_time"
        android:text="@string/calculation"
        android:onClick="onClickCalculation"
        />





</RelativeLayout>
